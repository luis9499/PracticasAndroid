<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#e9f1fa"
    tools:context="com.example.solicitudesfup.Main2Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fundación Universitaria de Popayán"
        android:textSize="20dp"
        android:textColor="#080808"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50dp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/btn_Notas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Notas"
        android:layout_gravity="center_horizontal"
        android:background="#8ec2fc"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical|center_horizontal" />

    <Button
        android:id="@+id/btn_Sol_Cert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#8ec2fc"
        android:layout_marginBottom="5dp"
        android:text="Solicitud de Certificado"
        android:gravity="center_vertical|center_horizontal" />

    <Button
        android:id="@+id/btn_Pet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#8ec2fc"
        android:layout_marginBottom="5dp"
        android:text="Peticiones"
        android:gravity="center_vertical|center_horizontal" />

    <Button
        android:id="@+id/btn_Consul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#8ec2fc"
        android:layout_marginBottom="5dp"
        android:text="Consulta Estado Solicitud"
        android:gravity="center_vertical|center_horizontal" />

    <Button
        android:id="@+id/btn_Cerrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#8ec2fc"
        android:layout_marginBottom="5dp"
        android:text="Cerrar Sesión"
        android:gravity="center_vertical|center_horizontal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logofup" />


</LinearLayout>
